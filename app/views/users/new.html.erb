<div class="panel panel-default panel-login">
  <%= form_for(@user, html: {class: "form-horizontal panel-body"}) do |f| %>
    <div class="form-group">
      <%= f.label :real_name, {class: "col-sm-12 form-label"} %>
      <div class="col-sm-12">
        <%= f.text_field :realname, {class: "form-control", placeholder: :real_name } %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :username, {class: "col-sm-12 form-label"} %>
      <div class="col-sm-12">
        <%= f.text_field :username, {class: "form-control", placeholder: :username } %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, {class: "col-sm-12 form-label"} %>
      <div class="col-sm-12">
        <%= f.password_field :password, {class: "form-control", placeholder: :password } %>
      </div>
    </div>
    <%= f.submit "Sign up", {class: "btn btn-default"} %>
  <% end %>
</div>
