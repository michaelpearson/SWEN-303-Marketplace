<%= render 'shared/alert' if @alert %>

<div class="container panel panel-default">
  <%= form_for(@user, html: {class: "form-horizontal panel-body"}) do |f| %>
    <div class="form-group">
      <%= f.label :real_name, {class: "col-md-2 col-sm-2 form-label"} %>
      <div class="col-lg-4 col-md-6 col-sm-8">
        <%= f.text_field :realname, {class: "form-control", placeholder: :real_name } %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :username, {class: "col-md-2 col-sm-2 form-label"} %>
      <div class="col-lg-4 col-md-6 col-sm-8">
        <%= f.text_field :username, {class: "form-control", placeholder: :username } %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, {class: "col-md-2 col-sm-2 form-label"} %>
      <div class="col-lg-4 col-md-6 col-sm-8">
        <%= f.password_field :password, {class: "form-control", placeholder: :password } %>
      </div>
    </div>
    <%= f.submit "Sign up", {class: "btn btn-default"} %>
  <% end %>
</div>
