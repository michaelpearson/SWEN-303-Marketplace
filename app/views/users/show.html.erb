<h2> MyRafflr</h2>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-6">
      <h1>Welcome <%= @user.realname %></h1>
      <h3> Token Count: <%= @user.token_count %> </h3>
      <i> <%= "Add more tokens" %> </i>
      <br>
      <br>
      <ul>
        <li> <%= "Change username " %> </li>
        <li> <%= "Change password " %> </li>
      </ul>
    </div>
    <div class="col-xs-6">
      Your transactions: <br>
      <% @user.transactions.each do |tr| %>
        <%= tr.kind %>
        <%= tr.stock.label %>
        <%= tr.stock.price %> <br>
       <% end %>
    </div>
  </div>
</div>