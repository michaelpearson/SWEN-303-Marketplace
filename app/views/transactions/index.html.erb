<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<div class="row">
  <div class="col-xs-3">Stock</div>
  <div class="col-xs-3">Price</div>
  <div class="col-xs-3">Kind</div>
</div>
<% @transactions.each do |transaction| %>
  <div class="row">
    <div class="col-xs-3"><%= transaction.stock.label %></div>
    <div class="col-xs-3"><%= transaction.stock.price %></div>
    <div class="col-xs-3"><%= transaction.kind %></div>
  </div>
<% end %>
