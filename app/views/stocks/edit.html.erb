<%= form_for @stock, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :label, {class: "form-label"}%>
    <%= f.text_field :label, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :price, {class: "form-label"} %>
    <%= f.number_field :price, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :description, {class: "form-label"} %>
    <%= f.text_area :description, {class: "form-control", rows: "5"} %>
  </div>

  <%= fields_for :photos do |photos| %>
    <div class="form-group">
      <%= photos.label :image, {:class => 'form-label'} %>
      <%= photos.file_field :image, multiple: true, as: :file %>
    </div>
  <% end %>
  <%= link_to 'Back', :back, {class: "btn btn-default"}%>
  <%= f.submit 'Update', {class: 'btn btn-warning pull-right'} %>
<% end %>
